{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "ESNext",
        "traceResolution": false,
        "baseUrl": ".",
        "paths": {
            "@root/*": [
                "./*"
            ],
        },
        "typeRoots": [
            "src/@types",
            "node_modules/@types"
        ],
        "module": "CommonJS",
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.example.ts",
        "src/**/*.spec.ts"
    ]
}
