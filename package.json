{
    "name": "@upradata/puppeteer",
    "author": {
        "name": "Thomas Milotti",
        "email": "thomas.milotti@gmail.com",
        "url": "https://github.com/milottit"
    },
    "repository": {
        "url": "https://github.com/upradata/puppeteer.git"
    },
    "license": "MIT",
    "version": "1.0.1",
    "description": "Set of utils to use puppeteer",
    "sideEffects": false,
    "main": "lib",
    "types": "lib",
    "module": "lib-esm",
    "files": [
        "lib",
        "lib-esm"
    ],
    "scripts": {
        "clean": "shx rm -rf lib lib-esm",
        "pre-build": "pnpm run clean",
        "build": "concurrently 'tsc -p tsconfig.lib.json' 'tsc -p tsconfig.lib-esm.json'",
        "post-build": "pnpm run test && npm run e2e",
        "watch": "pnpm run build:watch",
        "build:watch": "concurrently 'tsc -p tsconfig.lib.json -w' 'tsc -p tsconfig.lib-esm.json -w'",
        "test": "pnpm jest --passWithNoTests --verbose false --config jest-ut.config.js",
        "e2e": "pnpm jest --passWithNoTests --verbose false --config jest-e2e.config.js",
        "github-push": "pnpm run build && npm version patch && git pushall && git pushall-tags",
        "npm-publish": "pnpm run build && npm publish --access public"
    },
    "dependencies": {
        "puppeteer": "^10.1.0",
        "ts-util-is": "^1.2.1",
        "@upradata/node-util": "^13.0.9",
        "@upradata/util": "^11.2.9"
    },
    "devDependencies": {
        "@types/jest": "^26.0.24",
        "@types/node": "^16.4.1",
        "@types/puppeteer": "^5.4.4",
        "concurrently": "^6.2.0",
        "jest": "^27.0.6",
        "shx": "^0.3.3",
        "ts-jest": "^27.0.4",
        "ts-node": "^10.1.0",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.3.5"
    },
    "local": {
        "dependencies": {
            "@upradata/node-util": "link:/home/milottit/Libraries/Upra-Data/node-util@13.0.9",
            "@upradata/util": "link:/home/milottit/Libraries/Upra-Data/util@11.2.9"
        }
    },
    "keywords": [
        "puppeteer",
        "util"
    ],
    "publishConfig": {
        "access": "public"
    }
}
