{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        // "allowJs": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "umd",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "ESNext",
        "traceResolution": false,
        "outDir": "lib",
        "baseUrl": "./",
        "paths": {
            "@root/*": [
                "./*"
            ],
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "src/test.ts",
        "src/**/*.spec.ts"
    ]
}
